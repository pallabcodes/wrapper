<% 
  var localTitle = typeof title !== 'undefined' ? title : 'Welcome';
  var localSubtitle = typeof subtitle !== 'undefined' ? subtitle : '';
  var localFeatures = typeof features !== 'undefined' ? features : [];
%>
<!-- Enterprise-grade split screen sidebar -->
<div class="d-none d-md-flex position-relative overflow-hidden auth-sidebar-gradient" style="width: 42%; flex: 0 0 42%; height: 100%;">
  <!-- Subtle pattern overlay for depth -->
  <div class="position-absolute top-0 start-0 w-100 h-100" style="opacity: 0.05; background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px; pointer-events: none;"></div>
  
  <!-- Animated gradient overlay -->
  <div class="position-absolute top-0 start-0 w-100 h-100" style="opacity: 0.1; background: linear-gradient(45deg, transparent 30%, rgba(255,255,255,0.1) 50%, transparent 70%); background-size: 200% 200%; animation: shimmer 8s ease-in-out infinite; pointer-events: none;"></div>
  
  <!-- Content Container - Perfectly aligned with form -->
  <div class="text-white position-relative d-flex flex-column justify-content-center w-100 h-100" style="padding: 2rem 2rem; z-index: 10;">
    <!-- Logo/Brand Icon -->
    <div class="mb-4">
      <div class="d-inline-flex align-items-center justify-content-center mb-3 rounded-4 border border-white border-opacity-20" style="width: 3.5rem; height: 3.5rem; background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.1) 100%); box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1); backdrop-filter: blur(4px);">
        <span class="fs-2 fw-bold">&lt;/&gt;</span>
      </div>
      
      <!-- Main Heading -->
      <h2 class="fs-1 fw-bold mb-3" style="letter-spacing: -0.04em; line-height: 1.2; text-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);">
        <%= localTitle %>
      </h2>
      
      <!-- Subtitle -->
      <% if (localSubtitle) { %>
        <p class="fs-5 opacity-75 mb-0" style="line-height: 1.6; text-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);">
          <%= localSubtitle %>
        </p>
      <% } %>
    </div>
    
    <!-- Features List -->
    <% if (localFeatures && localFeatures.length > 0) { %>
      <div class="mt-5" style="display: flex; flex-direction: column; gap: 1rem;">
        <% localFeatures.forEach(function(feature) { %>
          <div class="d-flex align-items-start" style="gap: 1rem;">
            <!-- Icon Container -->
            <div class="flex-shrink-0 d-flex align-items-center justify-content-center rounded-3 border border-white border-opacity-20 transition-all" style="width: 2.5rem; height: 2.5rem; background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%); box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1); backdrop-filter: blur(4px);">
              <i class="<%= feature.icon %> small"></i>
            </div>
            
            <!-- Content -->
            <div class="flex-grow-1" style="padding-top: 0.25rem;">
              <p class="fw-semibold mb-1 small" style="text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);">
                <%= feature.title %>
              </p>
              <p class="small opacity-75 mb-0" style="line-height: 1.5;">
                <%= feature.description %>
              </p>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
  
  <!-- Decorative elements -->
  <div class="position-absolute rounded-circle opacity-25" style="width: 16rem; height: 16rem; top: 0; right: 0; background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%); transform: translate(30%, -30%); pointer-events: none;"></div>
  <div class="position-absolute rounded-circle opacity-25" style="width: 24rem; height: 24rem; bottom: 0; left: 0; background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%); transform: translate(-30%, 30%); pointer-events: none;"></div>
</div>

<style>
  @keyframes shimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  @media (min-width: 768px) {
    .auth-sidebar-gradient {
      width: 42% !important;
      flex: 0 0 42% !important;
    }
    .auth-sidebar-gradient > div {
      padding: 2rem 2rem !important;
    }
  }
  @media (min-width: 992px) {
    .auth-sidebar-gradient {
      width: 42% !important;
      flex: 0 0 42% !important;
    }
    .auth-sidebar-gradient > div {
      padding: 3rem 2.5rem !important;
    }
  }
  @media (min-width: 1200px) {
    .auth-sidebar-gradient {
      width: 45% !important;
      flex: 0 0 45% !important;
    }
    .auth-sidebar-gradient > div {
      padding: 4rem 4rem !important;
    }
  }
</style>
