<div class="rounded-2xl border overflow-hidden transition-all duration-200 hover:shadow-lg" style="background-color: var(--bg-primary); border-color: var(--border-light); box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);">
  <div class="px-6 py-4 border-b" style="border-color: var(--border-light);">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background-color: var(--color-primary-100);">
          <i class="fas fa-bell text-lg" style="color: var(--color-primary-600);"></i>
        </div>
        <div>
          <h3 class="text-lg font-semibold" style="color: var(--text-primary);">Notifications</h3>
          <p class="text-xs" style="color: var(--text-tertiary);">Real-time updates</p>
        </div>
      </div>
      <button 
        onclick="clearNotifications()"
        class="text-xs font-medium px-2 py-1 rounded transition-colors"
        style="color: var(--text-tertiary);"
        onmouseover="this.style.color='var(--text-primary)';"
        onmouseout="this.style.color='var(--text-tertiary)';"
      >
        Clear
      </button>
    </div>
  </div>
  <div class="p-6">
    <div id="notificationsList" class="space-y-3 min-h-[200px]">
      <div class="text-center py-8">
        <i class="fas fa-bell-slash text-3xl mb-3" style="color: var(--text-tertiary);"></i>
        <p class="text-sm" style="color: var(--text-secondary);">No notifications yet</p>
      </div>
    </div>
  </div>
</div>

