<div class="rounded-2xl border overflow-hidden transition-all duration-200 hover:shadow-lg" style="background-color: var(--bg-primary); border-color: var(--border-light); box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);">
  <div class="px-6 py-4 border-b" style="border-color: var(--border-light);">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background-color: var(--color-primary-100);">
          <i class="fas fa-comments text-lg" style="color: var(--color-primary-600);"></i>
        </div>
        <div>
          <h3 class="text-lg font-semibold" style="color: var(--text-primary);">Live Chat</h3>
          <p class="text-xs" style="color: var(--text-tertiary);">Real-time messaging</p>
        </div>
      </div>
      <div id="chatUsersCount" class="flex items-center space-x-1 px-2 py-1 rounded-lg" style="background-color: var(--bg-secondary);">
        <i class="fas fa-users text-xs" style="color: var(--text-tertiary);"></i>
        <span class="text-xs font-medium" style="color: var(--text-secondary);">0</span>
      </div>
    </div>
  </div>
  <div class="p-6">
    <div id="chatMessages" class="h-64 overflow-y-auto mb-4 space-y-3" style="scrollbar-width: thin;">
      <div class="text-center py-8">
        <i class="fas fa-comment-dots text-3xl mb-3" style="color: var(--text-tertiary);"></i>
        <p class="text-sm" style="color: var(--text-secondary);">No messages yet. Start the conversation!</p>
      </div>
    </div>
    <div class="flex space-x-2">
      <input 
        type="text" 
        id="chatInput" 
        placeholder="Type a message..." 
        class="flex-1 px-4 py-2.5 text-sm border rounded-xl outline-none transition-all duration-200 box-border"
        style="border-color: var(--border-medium); background-color: var(--bg-secondary); color: var(--text-primary);"
        onfocus="this.style.borderColor='var(--color-primary-500)'; this.style.boxShadow='0 0 0 3px var(--color-primary-100)';"
        onblur="this.style.borderColor='var(--border-medium)'; this.style.boxShadow='none';"
        onkeypress="if(event.key === 'Enter') { sendChatMessage(); }"
      >
      <button 
        onclick="sendChatMessage()"
        class="px-4 py-2.5 rounded-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2"
        style="background-color: var(--color-primary-600); color: var(--text-inverse);"
        onmouseover="this.style.backgroundColor='var(--color-primary-700)';"
        onmouseout="this.style.backgroundColor='var(--color-primary-600)';"
      >
        <i class="fas fa-paper-plane"></i>
      </button>
    </div>
  </div>
</div>

