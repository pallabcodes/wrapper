<!-- Hero Section -->
<section class="py-4 py-md-5" style="background: linear-gradient(180deg, var(--bg-primary) 0%, var(--bg-secondary) 100%); padding-top: 5rem !important;">
  <div class="container px-4">
    <div class="text-center mb-4 mb-md-5">
      <h1 class="display-4 fw-bold mb-3" style="color: var(--text-primary); letter-spacing: -0.03em; line-height: 1.1;">
        Enterprise Platform
      </h1>
      <p class="lead mb-4" style="color: var(--text-secondary); max-width: 42rem; margin: 0 auto;">
