          onmouseover="this.style.backgroundColor='var(--color-primary-50)'; this.style.borderColor='var(--color-primary-700)'; this.style.transform='translateY(-2px)';"
          onmouseout="this.style.backgroundColor='transparent'; this.style.borderColor='var(--color-primary-600)'; this.style.transform='translateY(0)';"
