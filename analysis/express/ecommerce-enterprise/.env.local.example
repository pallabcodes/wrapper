# ============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT CONFIGURATION
# Silicon Valley-grade local development setup
# ============================================================================

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/ecommerce_development

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
JWT_SECRET=your-local-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=24h

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
BCRYPT_ROUNDS=10

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-password
EMAIL_FROM=noreply@localhost.com
FRONTEND_URL=http://localhost:3000

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=debug

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_RATE_LIMITING=false

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# ============================================================================
# PAYMENT PROCESSORS (TEST KEYS)
# ============================================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-test-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-test-webhook-secret
PAYPAL_CLIENT_ID=your-paypal-sandbox-client-id
PAYPAL_CLIENT_SECRET=your-paypal-sandbox-client-secret

# ============================================================================
# CDN & STORAGE (LOCAL)
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ============================================================================
# THIRD-PARTY SERVICES (TEST)
# ============================================================================
GOOGLE_CLIENT_ID=your-google-test-client-id
GOOGLE_CLIENT_SECRET=your-google-test-client-secret
FACEBOOK_APP_ID=your-facebook-test-app-id
FACEBOOK_APP_SECRET=your-facebook-test-app-secret

# ============================================================================
# PERFORMANCE & CACHING
# ============================================================================
REDIS_CACHE_TTL=300
REDIS_SESSION_TTL=3600
REDIS_RATE_LIMIT_TTL=60

# ============================================================================
# SECURITY HEADERS (RELAXED FOR DEVELOPMENT)
# ============================================================================
HELMET_CONTENT_SECURITY_POLICY=false
HELMET_HSTS_MAX_AGE=0
HELMET_HSTS_INCLUDE_SUBDOMAINS=false
HELMET_HSTS_PRELOAD=false

# ============================================================================
# API RATE LIMITING (RELAXED FOR DEVELOPMENT)
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# ============================================================================
# DATABASE CONNECTION POOL (DEVELOPMENT)
# ============================================================================
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# ============================================================================
# SESSION CONFIGURATION (DEVELOPMENT)
# ============================================================================
SESSION_SECRET=your-local-session-secret-key
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# ============================================================================
# FILE UPLOAD LIMITS (DEVELOPMENT)
# ============================================================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ============================================================================
# NOTIFICATION SERVICES (TEST)
# ============================================================================
TWILIO_ACCOUNT_SID=your-twilio-test-account-sid
TWILIO_AUTH_TOKEN=your-twilio-test-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# SEARCH & ANALYTICS (LOCAL)
# ============================================================================
ELASTICSEARCH_URL=http://localhost:9200
ALGOLIA_APP_ID=
ALGOLIA_API_KEY=

# ============================================================================
# QUEUE & BACKGROUND JOBS (LOCAL)
# ============================================================================
BULL_REDIS_URL=redis://localhost:6379
BULL_PREFIX=ecommerce-enterprise-dev
BULL_DEFAULT_JOB_OPTIONS={"removeOnComplete": 10, "removeOnFail": 5}

# ============================================================================
# HEALTH CHECK ENDPOINTS
# ============================================================================
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics
READINESS_ENDPOINT=/ready
LIVENESS_ENDPOINT=/live

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
DEBUG=app:*
NODE_OPTIONS=--inspect=0.0.0.0:9229
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
ENABLE_DEBUG_LOGGING=true
