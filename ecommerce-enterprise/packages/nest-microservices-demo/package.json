{
  "name": "@ecommerce-enterprise/nest-microservices-demo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "start:dev": "ts-node --transpile-only src/main.ts",
    "start:redis": "ts-node --transpile-only src/main.redis.ts",
    "start:nats": "ts-node --transpile-only src/main.nats.ts",
    "start:rmq": "ts-node --transpile-only src/main.rmq.ts",
    "start:kafka": "ts-node --transpile-only src/main.kafka.ts",
    "start:hybrid": "ts-node --transpile-only src/main.hybrid.ts",
    "start:mqtt": "ts-node --transpile-only src/main.mqtt.ts",
    "start:grpc": "ts-node --transpile-only src/main.grpc.ts",
    "smoke": "ts-node --transpile-only test/smoke.ts"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.10.3",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.0.0",
    "mqtt": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@grpc/proto-loader": "^0.7.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  }
}
