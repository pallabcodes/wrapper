# Analytics Microservice Dockerfile - Development
FROM node:18-alpine

# Install curl for health checks
RUN apk add --no-cache curl

# Create app user for security
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nodejs -u 1001

WORKDIR /app

# Copy monorepo package manifests and install at root to resolve workspace deps
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
RUN npm i -g pnpm@8 && pnpm fetch
COPY packages ./packages
WORKDIR /app/packages/analytics
RUN pnpm install --recursive --offline
WORKDIR /app
RUN pnpm -r build --filter @ecommerce-enterprise/authx && pnpm -r install
WORKDIR /app/packages/analytics

# Switch to non-root user
USER nodejs

# Expose port
EXPOSE 3003

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:3003/api/v1/analytics/health || exit 1

# Start the application in development mode with hot reload
CMD ["pnpm", "run", "start:dev"]
