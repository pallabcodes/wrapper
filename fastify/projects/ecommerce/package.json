{
  "name": "@company/ecommerce-platform",
  "version": "1.0.0",
  "description": "Google-grade functional ecommerce platform built with Fastify",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "start:pm2:prod": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "test": "vitest",
    "test:unit": "vitest run src/**/*.test.ts",
    "test:integration": "vitest run tests/integration/**/*.test.ts",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t ecommerce-platform .",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "migration:create": "tsx scripts/migration/create.ts",
    "migration:run": "tsx scripts/migration/run.ts",
    "seed": "tsx scripts/seed/index.ts",
    "clean": "rm -rf dist node_modules/.cache",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "release": "standard-version"
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^8.3.1",
    "@prisma/client": "^5.6.0",
    "aws-sdk": "^2.1489.0",
    "bcrypt": "^5.1.1",
    "date-fns": "^2.30.0",
    "effect": "^2.0.0",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "io-ts": "^2.2.21",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "paypal-rest-sdk": "^1.8.1",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "prisma": "^5.6.0",
    "ramda": "^0.29.1",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "stripe": "^14.7.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@playwright/test": "^1.40.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.10",
    "@types/nodemailer": "^6.4.14",
    "@types/ramda": "^0.29.6",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/coverage-c8": "^0.33.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-functional": "^6.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.1.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run test:unit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "keywords": [
    "ecommerce",
    "fastify",
    "typescript",
    "functional-programming",
    "microservices",
    "enterprise",
    "scalable",
    "ddd",
    "clean-architecture"
  ],
  "author": "Company Engineering Team",
  "license": "MIT"
}
