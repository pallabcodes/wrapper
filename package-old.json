{
  "name": "advanced-ecommerce-platform",
  "version": "1.0.0",
  "description": "Google/Shopify-level e-commerce platform with research-grade implementations",
  "main": "app.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "NODE_ENV=development nodemon app.js",
    "build": "npm run build:native",
    "build:native": "node-gyp rebuild",
    "test": "tap tests/*.test.js --reporter=spec",
    "test:coverage": "tap tests/*.test.js --coverage",
    "test:performance": "node tests/performance.js",
    "test:native": "node tests/native.test.js",
    "test:memory": "node --expose-gc tests/memory.test.js",
    "lint": "eslint src/ app.js",
    "lint:fix": "eslint src/ app.js --fix",
    "format": "prettier --write 'src/**/*.js' 'tests/**/*.js' app.js",
    "docs": "jsdoc src/ -r -d docs/",
    "clean": "rm -rf build/ docs/ coverage/",
    "prebuild": "npm run clean",
    "pretest": "npm run lint"
  },
  "keywords": [
    "ecommerce",
    "fastify",
    "cqrs",
    "event-sourcing",
    "ddd",
    "crdt",
    "vector-search",
    "microservices",
    "performance",
    "research",
    "cpp",
    "native",
    "simd"
  ],
  "author": "Advanced E-Commerce Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.0",
    "fastify": "^4.24.3",
    "uuid": "^9.0.1",
    "ajv": "^8.12.0",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "dotenv": "^16.3.1"
  },
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "dotenv": "^16.3.1",
    "nodemailer": "^6.9.7",
    "stripe": "^14.5.0",
    "aws-sdk": "^2.1493.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "validator": "^13.11.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "pm2": "^5.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/app.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "*.test.js",
      "node_modules"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
