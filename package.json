{
  "name": "advanced-ecommerce-platform",
  "version": "1.0.0",
  "description": "Google/Shopify-level e-commerce platform with research-grade implementations",
  "main": "app.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "NODE_ENV=development nodemon app.js",
    "build": "npm run build:native",
    "build:native": "node-gyp rebuild",
    "test": "tap tests/*.test.js --reporter=spec",
    "test:coverage": "tap tests/*.test.js --coverage",
    "test:performance": "node tests/performance.js",
    "test:native": "node tests/native.test.js",
    "test:memory": "node --expose-gc tests/memory.test.js",
    "lint": "eslint src/ app.js",
    "lint:fix": "eslint src/ app.js --fix",
    "format": "prettier --write 'src/**/*.js' 'tests/**/*.js' app.js",
    "docs": "jsdoc src/ -r -d docs/",
    "clean": "rm -rf build/ docs/ coverage/",
    "prebuild": "npm run clean",
    "pretest": "npm run lint"
  },
  "keywords": [
    "ecommerce",
    "fastify",
    "cqrs",
    "event-sourcing",
    "ddd",
    "crdt",
    "vector-search",
    "microservices",
    "performance",
    "research",
    "cpp",
    "native",
    "simd"
  ],
  "author": "Advanced E-Commerce Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.0",
    "fastify": "^4.24.3",
    "uuid": "^9.0.1",
    "ajv": "^8.12.0",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "jsdoc": "^4.0.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "tap": "^18.6.1",
    "artillery": "^2.0.1",
    "clinic": "^12.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/advanced-ecommerce-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/advanced-ecommerce-platform/issues"
  },
  "homepage": "https://github.com/your-org/advanced-ecommerce-platform#readme",
  "gypfile": true,
  "binary": {
    "napi_versions": [3, 4, 5, 6, 7, 8]
  }
}
